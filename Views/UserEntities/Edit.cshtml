@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model SchoolProject.Dto.SignUpDto

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
<h1>Edit</h1>

<h4>  @Html.DisplayFor(model => model.UserEntities.UserName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserEntities.UserName" class="control-label"></label>
                <input asp-for="UserEntities.UserName" class="form-control" />
                <span asp-validation-for="UserEntities.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEntities.FullName" class="control-label"></label>
                <input asp-for="UserEntities.FullName" class="form-control" />
                <span asp-validation-for="UserEntities.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEntities.Email" class="control-label"></label>
                <input asp-for="UserEntities.Email" class="form-control" />
                <span asp-validation-for="UserEntities.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEntities.BirthDay" class="control-label"></label>
                <input type="date" asp-for="UserEntities.BirthDay" class="form-control" />
                <span asp-validation-for="UserEntities.BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEntities.Address" class="control-label"></label>
                <input asp-for="UserEntities.Address" class="form-control" />
                <span asp-validation-for="UserEntities.Address" class="text-danger"></span>
            </div>
           <div class="form-group ">
                <div class="col-lg-15">
                    <label>School</label>
                    @Html.DropDownListFor(model => model.UserEntities.SchoolId, Model.SchoolList, "--Select School--", new { @class = "form-control" })
                    <span asp-validation-for="UserEntities.SchoolId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label>Department</label>
                <div class="col-lg-15">
                    @Html.DropDownListFor(model => model.UserEntities.DepartmentId, Model.DepartmentList, "--Select Department--", new { @class = "form-control"})
                </div>
            </div>
            <div class="form-group ">
                <label>Class</label>
                <div class="col-lg-15">
                    @Html.DropDownListFor(model => model.UserEntities.ClassId, Model.ClassList, "--Select Class--", new { @class = "form-control" })
                </div>
            </div>
                        <div class="form-group ">
                <label>Class</label>
                <div class="col-lg-15">
                    @Html.DropDownListFor(model => model.UserEntities.Role, Model.RoleList, "--Select Class--", new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />

                <a asp-action="Cancel">
                    <input type="button" value="Cancel" width="16" height="16" class="btn btn-outline-danger" />
                </a>

                @{if(HttpContextAccessor.HttpContext.Session.GetInt32("Role") == 0)
                {
                    <a asp-action="Index">
                        <input type="button" value="Back to List" class="btn btn-secondary" />
                    </a>
                }}
            </div>
        </form>
        <br />
        @{
            if (@ViewBag.error != null)
            {
                <div id="AlertBox" class="alert alert-danger" role="alert">
                    @ViewBag.error
                </div>
            }
        }
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
        $(function() {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });

    </script>
    }
